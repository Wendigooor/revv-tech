.container
  .row
    .col-md-12
      = form_for @product, html: { class: "form form-horizontal product" } do |f|
        .form-group
          = f.label :name, class: 'control-label col-lg-2'
          .col-lg-10
            = f.text_field :name, class: 'form-control', required: true
          = f.error_span(:name)
        .form-group
          = f.label "Donation Price", class: 'control-label col-lg-3'
          .col-lg-2
            = f.text_field :amount_1, class: 'form-control', required: true
          .col-lg-2  
            = f.text_field :amount_2, class: 'form-control', required: true
          .col-lg-2
            = f.text_field :amount_3, class: 'form-control', required: true
          .col-lg-2
            = f.text_field :amount_4, class: 'form-control', required: true
          = f.error_span(:price)
        .form-group
          = f.label :description, class: 'control-label col-lg-2'
          .col-lg-10
            = f.text_area :description, class: 'form-control', required: true
          = f.error_span(:description)
        .form-group
          .col-lg-offset-2.col-lg-10
            = f.submit nil,class: 'btn btn-primary'
            = link_to t('.cancel', :default => t("helpers.links.cancel")), products_path, :class => 'btn btn-default'
